#next-nav{
  width:800px;
  margin:0 auto;
}

.box {
    width: 200px;
    min-height: 200px;
    background-color: #ECECEC;
    border: 1px solid #C6C6C6;
    border-radius: 3px;
    text-align: left;
    float:left;
    margin:5px;
}

.box-hover {
    background-color: black;
    position: absolute;
    width: 200px;
    height: 200px;
    margin: 5px 5px 0 5px;
    display: none;
    opacity: 0.75;
    color:white;
    text-align:center;
    font-size:12px;
}

.box-hover p {
    padding:10px;
    font-size:13px;
}

.box-image {
    margin: 5px 5px 0 5px;
}

.box-image img {
    width: 200px;
    height: 200px;
}

.box-hover img{
  width: 190px;
  height: 110px;
  opacity:1;
}

.box-image a:hover img{
    opacity:1;
}

.box-text {
    padding: 5px;
    font-size: 13px;
    font-weight: bold;
    color: #262626;
    height: 35px;
    text-align:center;
}

.box-text span {
    font-size: 14px;
    font-weight: normal;
}